<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <title>UCLA enginnering course page</title>
</head>
<body>
    <div class="container">
        <% if(class_id.name != null){%>
        <h1 class = "mb-4">Class Page for <%= class_id.name%></h1>
        <div class="form-group">
            <h3>Basic Course Information: <%= class_id.info%></h3>
            <h5>Professors: <%= class_id.professors%></h5>
            <h5>Course Content Summary: <%= class_id.summary%></h5>
            <h5>Overall Rating: <%= class_id.overall_rating%></h5>
        </div>
        <% } %>

        <div>
            <tr class="attr-row">
            <td>
                <%if (class_id.name != null){%>
                <form action="/comment/rate/<%=class_id._id %>" method="POST">
                    <input type="hidden" id="rate" name="rate" value='1'>
                    <input type="hidden" id="class" name="class" value= <%=class_id.name%>>
                    <button type="submit">1 😡</input> </button>
                </form>
                <form action="/comment/rate/<%=class_id._id %>" method="POST">
                    <input type="hidden" id="rate" name="rate" value='2'>
                    <input type="hidden" id="class" name="class" value= <%=class_id.name%>>
                    <button type="submit">2 😢</input> </button>
                </form>
                <form action="/comment/rate/<%=class_id._id %>" method="POST">
                    <input type="hidden" id="rate" name="rate" value='3'>
                    <input type="hidden" id="class" name="class" value= <%=class_id.name%>>
                    <button type="submit">3 🙂</input> </button>
                </form>
                <form action="/comment/rate/<%=class_id._id%>" method="POST">
                    <input type="hidden" id="rate" name="rate" value='4'>
                    <input type="hidden" id="class" name="class" value= <%=class_id.name%>>
                    <button type="submit">4 😊</input> </button>
                </form>
                <form action="/comment/rate/<%=class_id._id%>" method="POST">
                    <input type="hidden" id="rate" name="rate" value='3'>
                    <input type="hidden" id="class" name="class" value= <%=class_id.name%>>
                    <button type="submit">5 😍</input> </button>
                </form>
                <%}%>
            </td>
            </tr>
        </div>

        <div>
            <a href="/comment/rate" class = "btn btn-success" >Rate this course</a>
        </div>
        
        <pre class="tab"></pre>
        <pre class="tab"></pre>
        <pre class="tab"></pre>

        <div>
            <h3>
                Student Comments:
            </h3>
        </div>

        <a href="/comment/new" class = "btn btn-success">Post new comment</a>

        <% for (var i = 0; i < comment.length; i++){ %>
            <div class ="card mt-4">
                <div class = "card-body">
                    <h4 class = "card-title"><%= comment[i].user%></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= comment[i].commentAt %>
                    </div>
                    <div class="card-text mb-2">
                        <%= comment[i].courseComment%>
                    </div>
                    <div>
                        <form action="/comment/useful/<%=comment[i]._id%>" method="POST">
                            <input type="hidden" id="com" name="com" value='<%= i %>'>
                        <button type="submit">useful?</input> </button>
                        </form>
                        <%= comment[i].usefulness%>
                    </div>
                </div>%>
            </div>
            <% } %>
    </div>
</body>
</html>